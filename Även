def printa(text):
  n, x = 0, ""
  for bokstav in text:
      if bokstav == "*" or n == 1:
          n = 1
          if bokstav != " ":
              x += str(bokstav)
          else:
              if "." in x:
                time.sleep((int(x[1])+(int(x[3:]))/(10**len(x[3:]))))
              else:
                  time.sleep(int(x[1:]))
              n, x = 0, ""
      else:
          print(bokstav, end = "", flush = True)
          time.sleep(0.045)




def fr√•ga():
    while True:
        x = input("\nVad vill du g√∂ra? (g√•/inventory/stats)\n--> ")
        if x.strip() == "1" or x.strip().lower() == "g√•":
            d√∂rr()
            break
        elif x.strip() == "2" or x.strip().lower() == "inventory":
            print("")
            if len(player1.inventory) == 0:
              printa("Ditt inventory √§r tomt")
              print("")
            for item in player1.inventory:
              print(f"{item.name} +{item.str_bonus}")
        elif x.strip() == "3" or x.strip().lower() == "stats":
            print(f'''
Lvl = {player1.lvl}
Hp = {player1.hp}
Str = {player1.strength}''')
        else:
          pass




def d√∂rr():
  while True:
    print(D√∂rrar)
    x = input("{: >28}".format("Vilken d√∂rr?\n--> "))
    if x.strip() == "1" or x.strip() == "2" or x.strip() == "3":
        random.choice([f√§lla, kista, monster])()
        break
    else:
      print("\nSkriv 1, 2 eller 3 tack")       




def f√§lla():
    x = random.randint(1,2)
    player1.hp -= x
    print("\nAj!", end = "")
    printa(f"*0.3  en f√§lla!*0.4 \nDu tog {x}‚ù§ skada*0.4 \n\nDu har {player1.hp}‚ù§ hp kvar*0.4 \n")


def kista():
  namn = random.choice(Items)
  Items.remove(namn)
  player1.inventory.append(namn)
  printa(f"\nDu hittade en kista med {namn.genus}*0.3 .*0.3 .*0.3 .*0.2 \n")
  for i in player1.inventory[-1].icon:
    if i == " ":
      print(i, end = "")
    else:
      print(i, end = "")
      time.sleep(0.02)
  print(f"\n {namn.name}!")
  printa(f"*0.6 Det ger dig +{namn.str_bonus} Strength*0.4 \n")
  player1.strength += namn.str_bonus
  if len(player1.inventory) > 5:
      printa(f"\nDitt inventory √§r fullt!*1 \nVill du byta ut ett av dina gamla items mot {player1.inventory[-1].name}?*1 \n\n")
      for i in range(5):
            print(f"{i+1}: {player1.inventory[i].name} +{player1.inventory[i].str_bonus}")
      print(f"\n*{player1.inventory[5].name} +{player1.inventory[5].str_bonus}")
      while True:
          x = input("\nJa / Nej? (1/2)\n--> ")
          if x.strip().lower() == "nej" or x.strip() == "2":
            player1.inventory.pop(-1)
            break
          elif x.strip().lower() == "ja" or x.strip() == "1":
            while True:
              x = input("\nVilket Item? (1/2/3/4/5)\n--> ")
              if x.strip() == "1" or x.strip() == "2" or x.strip() == "3" or x.strip() == "4" or x.strip() == "5":
                sl√§ng = player1.inventory.pop(int(x)-1)
                printa(f"\nDu bytte ut {sl√§ng.name} mot {namn.name}")
                break
            break
  player1.strength = 1 + sum(item.str_bonus for item in player1.inventory)
  


def monster():    #springer iv√§g 
    monster_strength = random.randint(1,10)
    printa("\nDu st√∂tte p√• ett monster!*0.3 .*0.3 .*0.3 .*0.2 \n")
    if monster_strength > player1.strength:
        player1.hp -= 1
        printa(f"Du tog 1‚ù§ skada*0.4 \n\nDu har {player1.hp}‚ù§ hp kvar*0.4 \n")
    elif monster_strength < player1.strength:
        player1.lvl += 1
        printa(f"Du besegrade monstret!*0.4 \n\nDu gick upp till level {player1.lvl}*0.4 \n")
    else:
        printa("Monstret sprang iv√§g! *0.4 \n\nIngenting h√§nder*0.4 \n")




def du_f√∂rlorade():
  time.sleep(1)
  for bokstav in "\nüíÄDu f√∂rloradeüíÄ":
      print(bokstav, end = "")
      time.sleep(0.125)
  for i in range(3):
      print(".", end = "")
      time.sleep(0.2)
  time.sleep(2)


def du_vann():
  time.sleep(1)
  printa("Du har vunnit √§ventyrsspelet!")
  for i in range(3):
      print("üéâ", end = "")
      time.sleep(0.15)




