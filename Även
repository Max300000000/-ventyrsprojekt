class Player:
  def __init__(self, strength, hp, lvl, inventory):
    self.strength = strength
    self.hp = hp
    self.lvl = lvl
    self.inventory = inventory

class Item:
  def __init__(self, name, strength_bonus):
    self.name = name
    self.strength_bonus = strength_bonus


player1 = Player(1, 10, 1, [])

en_items = ["Yxa", "Sten" "Slangbella", "Sk√∂ld", "Pilb√•ge", "Ryggs√§ck","mcflurry caramel popcorn"]
ett_items = ["Gammalt Sv√§rd",  "Visset L√∂v", "F√∂rtrollat √§pple","happy meal :)"]
_items = ["Thor's Hammare", "D√∂dssk√∂lden", "Det Heliga Sv√§rdet", "", ""]




def printa(text):
  n, x = 0, ""
  for bokstav in text:
      if bokstav == "*" or n == 1:
          n = 1
          if bokstav != " ":
              x += str(bokstav)
          else:
              if "." in x:
                time.sleep((int(x[1])+(int(x[3:]))/(10**len(x[3:]))))
              else:
                  time.sleep(int(x[1:]))
              n, x = 0, ""
      else:
          print(bokstav, end = "", flush = True)
          time.sleep(0.045)




def fr√•ga():
    while True:
        x = input("\nVad vill du g√∂ra? (g√•/inventory/stats)\n--> ")
