#Anropar funktioner vid r√§tt tillf√§lle
def spela():
    global print_v√§lkomnande         #global anv√§nds f√∂r att man ska slippa ge alla funktioner tillg√•ng till de mest anv√§nda variablerna
    if print_v√§lkomnande == False:
        print(v√§lkomnande)
        print_v√§lkomnande = True
    global spelare
    spelare = Spelare()
    global omg√•ng
    omg√•ng = 0
    while True:
        omg√•ng += 1
        fr√•ga()
        print("")
        if spelare.hp < 1:
            du("f√∂rlorade")
            break
        elif spelare.lvl == 10:
            du("vann!")
            break
    print("\n\nVill du spela igen? (ja/nej) (1/2)")     #Till√•ter √§n att spela igen
    while True:
        x = input("--> ").strip().lower()
        if x in ["1", "ja"]:
            printa("\nDu har valt att spela igen\nStartar om programmet")
            printa("...", 0.2)
            ts(0.3)
            print("\n\n\n\n\nV√§lkommen tillbaka!\nDu vet hur det g√•r till redan...niv√• 10 bla bla")
            ts(0.3)
            spela()
        elif x in ["2", "nej"]:
            printa("\nDu har valt att inte spela igen, hejd√•!")
            break


#Anropar spelfunktionen
spela()
