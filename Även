import random, time

class Spelare:
    def __init__(self):
        self.lvl = 1
        self.hp = 15
        self.styrka = 1
        self.inventory = []

class Item:
  def __init__(self, namn, bild, genus="", healing=False):
      self.namn = namn
      self.bild = bild
      self.genus = genus
      self.healing = healing
      self.kraft = random.randint(1,5)

class Monster:
  def __init__(self, namn, styrka, bild):
    self.namn = namn
    self.styrka = styrka
    self.bild = bild


