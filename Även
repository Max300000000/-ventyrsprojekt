            d√∂rr()
            break
        elif x.strip() == "2" or x.strip().lower() == "inventory":
            print("")
            if len(player1.inventory) == 0:
              printa("Ditt inventory √§r tomt")
              print("")
            for item in player1.inventory:
              print(f"{item.name} +{item.strength_bonus}")
        elif x.strip() == "3" or x.strip().lower() == "stats":
            print(f'''
Lvl = {player1.lvl}
Hp = {player1.hp}
Str = {player1.strength}''')
        else:
          pass




def d√∂rr():
  while True:
    x = input("\nVilken d√∂rr? (1/2/3)\n--> ")
    if x.strip() == "1" or x.strip() == "2" or x.strip() == "3":
        random.choice([f√§lla, kista, monster])()
        break
    else:
      print("\nSkriv 1, 2 eller 3 tack")       




def f√§lla():
    x = random.randint(1,2)
    player1.hp -= x
    print("\nAj!", end = "")
    printa(f"*0.3  en f√§lla!*0.4 \nDu tog {x}‚ù§ skada*0.4 \n\nDu har {player1.hp}‚ù§ hp kvar*0.4 \n")




def kista():      #+str i combat?
    ord = random.choice([" en", " ett", ""])
    if ord == " en":
        namn = random.choice(en_items)
    elif ord == " ett":
        namn = random.choice(ett_items)
    else:
        namn = random.choice(_items)
    for i in ett_items, en_items, _items:
        if namn in i:
            i.remove(namn)
    player1.inventory.append(Item(namn,random.randint(1,5)))
    player1.strength += player1.inventory[-1].strength_bonus
    printa(f"\nDu hittade en kista med{ord}*0.3 .*0.3 .*0.3 .*0.2 ")
    print(f" {namn}!")
    printa(f"*0.6 Det ger dig +{player1.inventory[-1].strength_bonus} Strength*0.4 \n")
    if len(player1.inventory) != 5:
        pass




def monster():    #springer iv√§g 
    monster_strength = random.randint(1,10)
    printa("\nDu st√∂tte p√• ett monster!*0.3 .*0.3 .*0.3 .*0.2 \n")
    if monster_strength > player1.strength:
        player1.hp -= 1
        printa(f"Du tog 1‚ù§ skada*0.4 \n\nDu har {player1.hp}‚ù§ hp kvar*0.4 \n")
    elif monster_strength < player1.strength:
        player1.lvl += 1
        printa(f"Du besegrade monstret!*0.4 \n\nDu gick upp till level {player1.lvl}*0.4 \n")
    else:
        printa("Monstret sprang iv√§g! *0.4 \n\nIngenting h√§nder*0.4 \n")




def du_f√∂rlorade():
