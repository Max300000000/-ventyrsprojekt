happy_meal = Item("Happy Meal", happy_meal_bild, "ett", True)

items = [sten, svärd, yxa, sköld, hammare, slangbella, äpple, happy_meal, löv]


fälla_bild =('''
 ▀▀▌░░░░░░░░░░░░░░█▀▀▀▀▀\n   ▌┼░░░░░░░░░░░┼│▌\n   ▀▌│┼░░░░░░┼░│││▌\n    █│││┼░░░░│││▄█\n    ▀█││││┼│││││█\n     █┼┼┼│││┼┼██\n      ▀█┼┼┼┼┼█▀\n        ▀▀▀▀▀
