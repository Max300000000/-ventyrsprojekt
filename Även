def byt_item(item):
    printa("\n\nDitt inventory Ã¤r fullt!")
    ts(0.3)
    printa("\nVill du byta ut ett av dina gamla items? (ja/nej)")
    ts(0.3)
    print("\n")
    for i in range(5):
            print(f"{i+1}: {spelare.inventory[i].namn} +{spelare.inventory[i].bonus_styrka}")
    print(f"\n*{item.namn} +{item.bonus_styrka}\n")
    while True:
        x = input("--> ").strip().lower()
        if x in ["1", "ja"]:
            print("\nVilket? (1/2/3/4/5)")
            while True:
                y = input("--> ").strip().lower()
                if y in ["1", "2", "3", "4", "5"]:
                    spelare.inventory[int(y)-1] = item
                    break
                elif y == "b":
                    break
            if y != "b":
                break
        elif x in ["2", "nej"]:
            break




def du(hÃ¤ndelse):
  ts(1)
  if hÃ¤ndelse == "fÃ¶rlorade":
      x, y = "ğŸ’€", "."
  if hÃ¤ndelse == "vann!":
      x, y = "", "ğŸ‰"
  printa(f"\n{x}Du {hÃ¤ndelse}{x}", 0.125)
  printa(y * 3, 0.2)
  ts(1)




def printa(text, hastighet = 0.045):
    for i in text:
        print(i, end = "", flush = True)
        if i != " ":
            time.sleep(hastighet)


def ts(x):
    time.sleep(x)



def spela():
    global print_vÃ¤lkomnande
    if not print_vÃ¤lkomnande:
        print(vÃ¤lkomnande)
        print_vÃ¤lkomnande = True
    global spelare
    spelare = Spelare()
    while True:
        frÃ¥ga()
        print("")
        if spelare.hp < 1:
            du("fÃ¶rlorade")
            break
        elif spelare.lvl == 10:
            du("vann!")
            break
    print("\n\nVill du spela igen? (ja/nej)")
    while True:
        x = input("--> ").strip().lower()
        if x in ["1", "ja"]:
            printa(f"Du har valt att spela igen\nStartar om programmet")
            printa("...", 0.2)
            spela()
        elif x in ["2", "nej"]:
            printa("Du har valt att inte spela igen, hejdÃ¥!")
            break


spela()

