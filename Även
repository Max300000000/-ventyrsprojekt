def fr√•ga():
    print("\nVad vill du g√∂ra? (g√•/inventory/stats)")
    while True:
        x = input("--> ").strip().lower()
        if x in ["1", "g√•"]:
            d√∂rr()
            break
        elif x in ["2", "inventory"]:
            inventory()
        elif x in ["3", "stats"]:
            stats()




def d√∂rr():
    print(d√∂rrar)
    print("\nVilken d√∂rr? (1/2/3)")
    while True:
        x = input("--> ").strip()
        if x in ["1", "2", "3"]:
            random.choice([f√§lla, monster, kista])()
            break


def inventory():
    print("")
    for item in spelare.inventory:
        print(f"{item.namn} +{item.kraft}")
    if len(spelare.inventory) == 0:
        printa("Ditt inventory √§r tomt\n")
    print("")


def stats():
    print(f'''
Lvl = {spelare.lvl}
Hp = {spelare.hp}
Sty = {spelare.styrka}
''')




def f√§lla():
    x = random.randint(1,2)
    spelare.hp -= x
    f√§lla_print(x)


def monster():
    monster = random.choice(alla_monster)
    if monster.styrka > spelare.styrka:
        spelare.hp -= 1
        monster_print("f√∂rlorade", monster)
    elif monster.styrka < spelare.styrka:
        spelare.lvl += 1
        monster_print("vann", monster)
    else:
        monster_print("lika", monster)


def kista():
    item = random.choice(items)
    items.remove(item)
    if item.healing == True:
        spelare.hp += item.kraft
    kista_print(item)
    if item.healing == False:
        if len(spelare.inventory) == 5:
            byt_item(item)
        else:
            spelare.inventory.append(item)
        spelare.styrka = 1 + sum(item.kraft for item in spelare.inventory)




def f√§lla_print(x):
    print("\nAj!", end = "")
    ts(0.3)
    printa(" en f√§lla!")
    ts(0.3)
    print("")
    printa(f√§lla_bild, 0.005)
    ts(0.3)
    printa(f"\nDu tog {x}‚ù§ skada")
    ts(0.3)
    printa(f"\n\nDu har {spelare.hp}‚ù§ hp kvar")
    ts(0.5)


def monster_print(h√§ndelse, monster):
    printa("\nDu st√∂tte p√• ett monster!")
    ts(0.2)
    printa("...", 0.2)
    ts(0.3)
    print("")
    printa(monster.bild, 0.005)
    ts(0.3)
    printa(f"\nDet √§r en {monster.namn}")
    ts(0.3)
    if h√§ndelse == "f√∂rlorade":
        printa("\nDu tog 1‚ù§ skada")
        ts(0.3)
        printa(f"\n\nDu har {spelare.hp}‚ù§ hp kvar")
    elif h√§ndelse == "vann":
        printa("\nDu besegrade monstret!")
        ts(0.3)
        printa(f"\n\nDu gick upp till level {spelare.lvl}")
    else:
        printa("\nMonstret sprang iv√§g")
        ts(0.3)
        printa("\n\nIngenting h√§nder")
    ts(0.5)


def kista_print(item):
    printa(f"\nDu hittade en kista med {item.genus}")
    printa("...", 0.2)
    ts(0.3)
    print("")
    printa(item.bild, 0.005)
    ts(0.3)
    print("")
    printa("...", 0.2)
    ts(0.3)
    printa(f" {item.namn}!")
    ts(0.5)
    print("")
    if item.healing == True:
        printa(f"\nDu v√§ljer att √§ta det direkt\nDet ger dig +{item.kraft}‚ù§ hp")
        ts(0.3)
        printa(f"\n\nDu har nu {spelare.hp}‚ù§ hp")
    else:
        printa(f"\nDet ger dig +{item.kraft} styrka")
        ts(0.3)
        if len(spelare.inventory) < 5:
            printa("\nDu la ner f√∂rem√•let i din ryggs√§ck.")
    ts(0.5)




def byt_item(item):
    printa("\n\nDu f√∂rs√∂kte l√§gga ner f√∂rem√•let i din ryggs√§ck men den var full!")
    ts(0.3)
    printa("\nVill du byta ut ett av dina gamla items? (ja/nej)")
    ts(0.3)
    print("\n")
    for i in range(5):
            print(f"{i+1}: {spelare.inventory[i].namn} +{spelare.inventory[i].kraft}")
    print(f"\n*{item.namn} +{item.kraft}\n")
    while True:
        x = input("--> ").strip().lower()
        if x in ["1", "ja"]:
            print("\nVilket? (1/2/3/4/5)")
            while True:
                y = input("--> ").strip().lower()
                if y in ["1", "2", "3", "4", "5"]:
                    sl√§ng = spelare.inventory[int(y)-1]
                    spelare.inventory[int(y)-1] = item
                    printa(f"Du bytte ut {sl√§ng.namn} mot {item.namn}")
                    break
                elif y == "b":
                    break
            if y != "b":
                break
        elif x in ["2", "nej"]:
            break




def du(h√§ndelse):
  ts(1)
  if h√§ndelse == "f√∂rlorade":
      x, y = "üíÄ", "."
  if h√§ndelse == "vann!":
      x, y = "", "üéâ"
  printa(f"\n{x}Du {h√§ndelse}{x}", 0.125)
  printa(y * 3, 0.2)
  ts(1)




def printa(text, hastighet = 0.045):
    for i in text:
        print(i, end = "", flush = True)
        if i != " ":
            time.sleep(hastighet)


def ts(x):
    time.sleep(x)



def spela():
    global print_v√§lkomnande
    if print_v√§lkomnande == False:
        print(v√§lkomnande)
        print_v√§lkomnande = True
