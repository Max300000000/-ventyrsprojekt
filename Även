#Monster
slajm = Monster("Ledsen Slajm", 1, slajm_bild)
napstablook = Monster("Gråtande Gast", 2, napstablook_bild)
stjärna = Monster("Deprimerad Stjärna", 3, stjärna_bild)
myrslok = Monster("Miserabel Myrslok", 4, Myrslok_bild)

alla_monster = [slajm, napstablook, stjärna, myrslok]







def fråga():
    print("\nVad vill du göra? (gå/inventory/stats)")
    while True:
        x = input("--> ").strip().lower()
        if x in ["1", "gå"]:
            dörr()
            break
        elif x in ["2", "inventory"]:
            inventory()
        elif x in ["3", "stats"]:
            stats()




def dörr():
    print(dörrar)
    print("\nVilken dörr? (1/2/3)")
    while True:
        x = input("--> ").strip()
        if x in ["1", "2", "3"]:
            random.choice([fälla, monster, kista])()
            break


def inventory():
    print("")
    for item in spelare.inventory:
        print(f"{item.namn} +{item.kraft}")
    if len(spelare.inventory) == 0:
        printa("Ditt inventory är tomt\n")
    print("")


def stats():
    print(f'''
Lvl = {spelare.lvl}
Hp = {spelare.hp}
Sty = {spelare.styrka}
''')




def fälla():
    x = random.randint(1,2)
    spelare.hp -= x
    fälla_print(x)


def monster():
    monster = random.choice(alla_monster)
    if monster.styrka > spelare.styrka:
        spelare.hp -= 1
        monster_print("förlorade", monster)
    elif monster.styrka < spelare.styrka:
        spelare.lvl += 1
        monster_print("vann", monster)
    else:
        monster_print("lika", monster)


def kista():
    item = random.choice(items)
    items.remove(item)
    if item.healing == True:
        spelare.hp += item.kraft
    kista_print(item)
    if item.healing == False:
        if len(spelare.inventory) == 5:
            byt_item(item)
        else:
            spelare.inventory.append(item)
        spelare.styrka = 1 + sum(item.kraft for item in spelare.inventory)




def fälla_print(x):
    print("\nAj!", end = "")
    ts(0.3)
    printa(" en fälla!")
    ts(0.3)
    print("")
    printa(fälla_bild, 0.005)
    ts(0.3)
    printa(f"\nDu tog {x}❤ skada")
    ts(0.3)
    printa(f"\n\nDu har {spelare.hp}❤ hp kvar")
    ts(0.5)


def monster_print(händelse, monster):
    printa("\nDu stötte på ett monster!")
    ts(0.2)
    printa("...", 0.2)
    ts(0.3)
    print("")
    printa(monster.bild, 0.005)
    ts(0.3)
    printa(f"\nDet är en {monster.namn}")
    ts(0.3)
    if händelse == "förlorade":
        printa("\nDu tog 1❤ skada")
        ts(0.3)
        printa(f"\n\nDu har {spelare.hp}❤ hp kvar")
    elif händelse == "vann":
        printa("\nDu besegrade monstret!")
        ts(0.3)
        printa(f"\n\nDu gick upp till level {spelare.lvl}")
    else:
        printa("\nMonstret sprang iväg")
        ts(0.3)
        printa("\n\nIngenting händer")
    ts(0.5)


def kista_print(item):
    printa(f"\nDu hittade en kista med {item.genus}")
    printa("...", 0.2)
    ts(0.3)
    print("")
    printa(item.bild, 0.005)
    ts(0.3)
    print("")
    printa("...", 0.2)
    ts(0.3)
    printa(f" {item.namn}!")
    ts(0.5)
    print("")
    if item.healing == True:
        printa(f"\nDu väljer att äta det direkt\nDet ger dig +{item.kraft}❤ hp")
        ts(0.3)
        printa(f"\n\nDu har nu {spelare.hp}❤ hp")
    else:
        printa(f"\nDet ger dig +{item.kraft} styrka")
        ts(0.3)
        if len(spelare.inventory) < 5:
            printa("\nDu la ner föremålet i din ryggsäck.")
    ts(0.5)




def byt_item(item):
    printa("\n\nDu försökte lägga ner föremålet i din ryggsäck men den var full!")
    ts(0.3)
    printa("\nVill du byta ut ett av dina gamla items? (ja/nej)")
    ts(0.3)
    print("\n")
    for i in range(5):
            print(f"{i+1}: {spelare.inventory[i].namn} +{spelare.inventory[i].kraft}")
    print(f"\n*{item.namn} +{item.kraft}\n")
    while True:
        x = input("--> ").strip().lower()
        if x in ["1", "ja"]:
            print("\nVilket? (1/2/3/4/5)")
            while True:
                y = input("--> ").strip().lower()
                if y in ["1", "2", "3", "4", "5"]:
                    släng = spelare.inventory[int(y)-1]
                    spelare.inventory[int(y)-1] = item
                    printa(f"Du bytte ut {släng.namn} mot {item.namn}")
                    break
                elif y == "b":
                    break
            if y != "b":
                break
        elif x in ["2", "nej"]:
            break




def du(händelse):
  ts(1)
  if händelse == "förlorade":
      x, y = "💀", "."
  if händelse == "vann!":
      x, y = "", "🎉"
  printa(f"\n{x}Du {händelse}{x}", 0.125)
  printa(y * 3, 0.2)
  ts(1)




def printa(text, hastighet = 0.045):
    for i in text:
        print(i, end = "", flush = True)
        if i != " ":
            time.sleep(hastighet)


def ts(x):
    time.sleep(x)



def spela():
    global print_välkomnande
    if print_välkomnande == False:
        print(välkomnande)
        print_välkomnande = True
    global spelare
    spelare = Spelare()
    while True:
        fråga()
        print("")
        if spelare.hp < 1:
            du("förlorade")
            break
        elif spelare.lvl == 10:
            du("vann!")
            break
    print("\n\nVill du spela igen? (ja/nej)")
    while True:
        x = input("--> ").strip().lower()
        if x in ["1", "ja"]:
            printa("Du har valt att spela igen\nStartar om programmet")
            printa("...", 0.2)
            print("\n\n\n\n\nVälkommen tillbaka!\nDu vet hur det går till redan...nivå 10 bla bla")
            spela()
        elif x in ["2", "nej"]:
            printa("Du har valt att inte spela igen, hejdå!")
            break


spela()

