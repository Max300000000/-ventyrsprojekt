#Funktioner:



#Fr√•gar spelaren vad den vill g√∂ra
def fr√•ga():
    print("\nVad vill du g√∂ra? (g√•/ryggs√§ck/stats) (1/2/3)")
    while True:
        x = input("--> ").strip().lower()
        if x in ["1", "g√•"]:
            d√∂rr()
            break
        elif x in ["2", "ryggs√§ck"]:
            ryggs√§ck()
        elif x in ["3", "stats"]:
            stats()



#Printar spelarens inventory
def ryggs√§ck():
    print("")
    for item in spelare.ryggs√§ck:
        print(f"{item.namn} +{item.kraft}")
    if len(spelare.ryggs√§ck) == 0:
        printa("Din ryggs√§ck √§r tom\n")
    print("")



#Printar spelarens stats
def stats():
    print(f'''
Lvl = {spelare.lvl}
Hp = {spelare.hp}
Sty = {spelare.styrka}
''')





#Fr√•gar spelaren vilken d√∂rr den vill v√§lja
def d√∂rr():
    print(d√∂rrar)
    print("\nVilken d√∂rr? (1/2/3)")
    while True:
        x = input("--> ").strip().lower()
        if x in ["1", "2", "3", "h√∂ger", "fram", "fram√•t", "v√§nster", "mitten"]:
            if omg√•ng == 1:
                kista()
            elif omg√•ng > 10:
                random.choice([f√§lla, monster, monster, kista])()
            else:
                random.choice([f√§lla, monster, kista])()
            break



#N√§r spelaren hamnar i en f√§lla
def f√§lla():
    x = random.randint(1,2)
    spelare.hp -= x
    if spelare.hp < 0:     #Ser till att spelarens hp inte blir negativt
        spelare.hp = 0
    f√§lla_print(x)



#N√§r spelaren m√∂ter ett monster
def monster():
    monster = random.choice(alla_monster)
    if monster.styrka > spelare.styrka:
        spelare.hp -= 1
        monster_print("f√∂rlorade", monster)
    elif monster.styrka < spelare.styrka:
        spelare.lvl += 1
        monster_print("vann", monster)
    else:
        monster_print("lika", monster)
        


#N√§r spelaren hittar en kista
def kista():
    global items
    if len(items) == 0:    #ser till att det inte tar slut p√• items
        items = [sten, sv√§rd, yxa, sk√∂ld, hammare, slangbella, √§pple, happy_meal, l√∂v]
    item = random.choice(items)
    items.remove(item)
    if item.healing == True:          #Ifall item √§r ett healing item
        spelare.hp += item.kraft
    kista_print(item)
    if item.healing == False:          
        if len(spelare.ryggs√§ck) == 5:
            byt_item(item)
        else:
            spelare.ryggs√§ck.append(item)
        spelare.styrka = 1 + sum(item.kraft for item in spelare.ryggs√§ck)



#Byter ut ett item i spelarens inventory n√§r det √§r fullt
def byt_item(item):
    printa("\n\nDu f√∂rs√∂kte l√§gga ner f√∂rem√•let i din ryggs√§ck men den var full!")
    ts(0.3)
    printa("\nVill du byta ut ett av dina gamla items? (ja/nej) (1/2)")
    ts(0.3)
    print("\n")
    for i in range(5):
            print(f"{i+1}: {spelare.ryggs√§ck[i].namn} +{spelare.ryggs√§ck[i].kraft}")
    print(f"\n*{item.namn} +{item.kraft}\n")
    while True:
        x = input("--> ").strip().lower()
        if x in ["1", "ja"]:
            print("\nVilket? (1/2/3/4/5)")
            while True:
                y = input("--> ").strip().lower()
                if y in ["1", "2", "3", "4", "5"]:
                    sl√§ng = spelare.ryggs√§ck[int(y)-1]
                    spelare.ryggs√§ck[int(y)-1] = item
                    printa(f"\nDu bytte ut {sl√§ng.namn} mot {item.namn}")
                    ts(0.3)
                    break
                elif y == "b":
                    break
            if y != "b":
                break
        elif x in ["2", "nej"]:
            break
       





#Print funktioner:



#F√∂r enkelhetens skull
def ts(x):
    time.sleep(x)


    
#Printar text fint
def printa(text, hastighet = 0.045):
    for i in text:
        print(i, end = "", flush = True)
        if i != " ":
            time.sleep(hastighet)
    




#Printas n√§r man hittar en f√§lla
def f√§lla_print(x):
    print("\nAj!", end = "")
    ts(0.3)
    printa(" en f√§lla!")
    ts(0.3)
    print("")
    printa(f√§llor[random.choice([0, 1])], 0.005)
    ts(0.3)
    printa(f"\nDu tog {x}‚ù§ skada")
    ts(0.3)
    printa(f"\n\nDu har {spelare.hp}‚ù§ hp kvar")
    ts(0.5)



#printas n√§r man hittar ett monster
def monster_print(h√§ndelse, monster):
    printa("\nDu st√∂tte p√• ett monster!")
    ts(0.2)
    printa("...", 0.2)
    ts(0.3)
    print("")
    printa(monster.bild, 0.005)
    ts(0.3)
    printa(f"\nDet √§r en {monster.namn}")
    ts(0.3)
    if h√§ndelse == "f√∂rlorade":
        printa("\nDu tog 1‚ù§ skada")
        ts(0.3)
        printa(f"\n\nDu har {spelare.hp}‚ù§ hp kvar")
    elif h√§ndelse == "vann":
        printa("\nDu besegrade monstret!")
        ts(0.3)
        printa(f"\n\nDu gick upp till level {spelare.lvl}")
    else:
        printa("\nMonstret sprang iv√§g")
        ts(0.3)
        printa("\n\nIngenting h√§nder")
    ts(0.5)




#Printas n√§r man hittar en kista
def kista_print(item):
    printa(f"\nDu hittade en kista med {item.genus}")
    printa("...", 0.2)
    ts(0.3)
    print("")
    printa(item.bild, 0.005)
    ts(0.3)
    print("")
    printa("...", 0.2)
    ts(0.3)
    printa(f" {item.namn}!")
    ts(0.5)
    print("")
    if item.healing == True:
        ts(0.3)
        printa("\nDu v√§ljer att √§ta det direkt")
        ts(0.3)
        printa(f"\nDet ger dig +{item.kraft}‚ù§ hp")
        ts(0.3)
        printa(f"\n\nDu har nu {spelare.hp}‚ù§ hp")
    else:
        printa(f"\nDet ger dig +{item.kraft} styrka")
        ts(0.3)
        if len(spelare.ryggs√§ck) < 5:
            printa("\nDu lade ner f√∂rem√•let i din ryggs√§ck")
    ts(0.5)





#Medelande n√§r man vinner / f√∂rlorar
def du(h√§ndelse):
  ts(1)
  if h√§ndelse == "f√∂rlorade":
      x, y = "üíÄ", "."
  if h√§ndelse == "vann!":
      x, y = "", "üéâ"
  printa(f"\n{x}Du {h√§ndelse}{x}", 0.125)
  printa(y * 3, 0.2)
  ts(1)





            
